{% extends 'layout-main.twig' %}

{% block title %}
    E-Exam | {{ parent() }}
{% endblock %}

{% block content %}
    <div id="etest-index">
        <div class="page-header">
            <h2>Available Courses</h2>
        </div>
        <div class="bg-info">
            <p>
                <blockquote>
                <h3>
                    Select a preffered course below to take your practice test
                </h3>
                </blockquote>
            </p>
        </div>

        <div class="container-fluid">
            <div class="col-md-8">
                {% for course in courses %}
                    <div class="media course-item">
                        <a class="course-icon pull-left bg-success innerAll text-center text-white"
                           href="course.html?lang=en">
                            <i class="fa fa-fw fa-globe fa-5x"></i>
                        </a>

                        <div class="media-body">
                            <h3 class="media-heading">
                                <a href="{{ app.url_generator.generate('etest.session', {course_id: course.id}) }}"
                                   class="text-inverse">
                                    {{ course.name }}
                                </a>
                                <small><i class="fa fa-fw fa-clock-o"></i> {{ course.time_length }} mins</small>
                            </h3>
                            <span class="text-muted">{{ course.description }}</span>
                            <button class="btn btn-primary btn-start-test">
                                Begin Test &raquo;
                            </button>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="col-md-4">

            </div>
        </div>
    </div>
{% endblock %}