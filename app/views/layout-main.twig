{% include 'layouts/header.twig' %}
<div id="wrapper">
  {% block before_header %}{% endblock %}

  {% block header %}
    <div id="header" class="navbar navbar-default navbar-fixed-top">
      <div class="navbar-header">
        <a href="{{ app.url_generator.generate('user.dashboard') }}" id="logo">
          <h2>E</h2>
        </a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="{% if is_module('books')|default(false) %}active{% endif %}">
            <a href="{{ app.url_generator.generate('books.index') }}">Books</a>
          </li>
          <li class="{% if is_module('print-jobs')|default(false) %}active{% endif %}">
            <a href="{{ app.url_generator.generate('printJobs.index') }}">Printing</a>
          </li>
          <li class="{% if is_module('electronic-test')|default(false) %}active{% endif %}">
            <a href="{{ app.url_generator.generate('etest.index') }}">E-Test</a>
          </li>
          <li class="{% if is_module('articles')|default(false) %}active{% endif %}">
            <a href="{{ app.url_generator.generate('articles.index') }}">Articles</a>
          </li>
          <li class="{% if is_module('billing')|default(false) %}active{% endif %}">
            <a href="{{ app.url_generator.generate('billing.index') }}">Billing</a>
          </li>
          <ul class="nav navbar-nav pull-right">
            <li>
              <a href="{{ app.url_generator.generate('user.logout') }}">Logout</a>
            </li>
          </ul>
          <!-- /.col-lg-6 -->
      </div>
    </div>
  {% endblock %}

  {% block after_header %}{% endblock %}
  {% block before_content %}{% endblock %}
  <div id="main">
    {% block content %} {% endblock %}
  </div>
  {% block after_content %}{% endblock %}
</div>
{% include 'layouts/footer.twig' %}
