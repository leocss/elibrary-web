{% extends 'layout-sidebar.twig' %}
{% block title %}
    Books | {{ parent() }}
{% endblock %}
{% block content %}
    <div id="book-index">
        <div id="header_search">
            <div class="col-md-4" style=" margin-right: 5px;" id="header_check">
                <div class="input-group">
                    <input type="text" placeholder="Looking for a book, what book? " class="form-control">
                                  <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                  </span>
                </div><!-- /input-group -->
            </div>
            <div id="header_only"><h3>{{ "Category/Category_name" }}</h3></div>
        </div><div class="clearfix"></div>
        <div class="container-fluid margin-top-lg">
            <div class="row">
                <div class="col-md-9">
                    <div class="container-fluid margin-top-lg">
                        <div class="row">
                            {% for book in books %}
                                <div class="col-md-4">
                                    <div id="book-hold">
                                        <div class="box book-item">
                                            <div class="book-item-preview">
                                                <img src="{{ app.base_url }}assets/img/sample-book-preview.png"
                                                     width="180" height="200"/>
                                            </div>
                                            <div class="text-center" id="book-att-icons">
                                                <p>
                  			<span class="icon-att"><a href="#"><span data-toggle="tooltip"
                                                                     data-placement="top" title="view">
                  			<span class="glyphicon glyphicon-eye-open"></span></span></a>
                            <span class="badge">112</span></span>
                  			<span class="icon-att"><a href="#">
                            <span data-toggle="tooltip" data-placement="top" title="Click to download book.">
                  			<span class="glyphicon glyphicon-download"></span></span></a>
                           	</span>
                 			<span class="icon-att"><a href="#"><span data-toggle="tooltip" data-placement="top"
                                                                     title="Click to add book to your favorite">
                            <span class="glyphicon glyphicon-star"></span></span></a>
                           	</span>
                 			<span class="icon-att"><a href="#" style="padding-right:15px;">
                           <span class="toolt" data-placement="left" data-toggle="tooltip"
                                 title="Click to apply for hardcopy of this book.">
                            <span class="glyphicon glyphicon-book"></span></span></a>
                           	</span>
                 			<span class="icon-att"><a href="#"><span data-toggle="tooltip" data-placement="top"
                                                                     title="like">
                            <span class="glyphicon glyphicon-thumbs-up"></span></span></a>
                            <span class="badge"> 12</span></span>
                                                </p>

                                                <div class="clearfix"></div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                    </div>
                </div>

                <div class="col-md-3" style="padding-top: 20px;">
                    {% include 'book/sidebar.twig' %}
                </div>

            </div>
        </div>

    </div>
{% endblock %}