{% extends 'layout-main.twig' %}

{% block title %}
    Books | {{ parent() }}
{% endblock %}

{% block content %}
    <div id="book-index">

        <div class="page-header clearfix">
            <h2 class="pull-left">Browse Books</h2>

            <div class="navbar navbar-default pull-right">
                {% include 'book/search-form.twig' %}
            </div>
        </div>

        <div class="container-fluid margin-top-lg">
            <div class="row">
                <div class="col-md-8">
                    {% for category in categories %}
                        <div class="category-item">
                            <div class="category-title">
                                <h3>{{ category.title }}</h3>
                            </div>

                            <div class="category-books">
                                <div class="row">
                                    {% for book in category.books %}
                                        <div class="col-xs-6 col-md-3 category-book-item">
                                            <div href="#" class="thumbnail no-rounded">
                                                <img src="{{ book.preview_image_url | default(app.default_book_image) }}"
                                                     alt="..."/>

                                                <div class="caption">
                                                    <div class="btn-group btn-group-justified no-rounded">
                                                        <a href="#" class="btn btn-primary no-rounded" role="button">
                                                            <span class="fa fa-eye"></span> <br/>
                                                            {{ book.views_count }}
                                                        </a>
                                                        <a href="#" class="btn btn-default no-rounded" role="button">
                                                            <span class="fa fa-thumbs-up"></span> <br />
                                                            {{ book.likes_count }}
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="col-md-4">
                    {# Most Liked Books Panel #}
                    <div class="panel panel-default panel-most-liked-books box no-rounded">
                        <div class="panel-heading no-rounded">
                            <h3 class="panel-title">
                                <span class="fa fa-plus"></span>
                                Most Liked Books
                            </h3>
                        </div>
                        <div class="panel-body">

                        </div>
                    </div>

                    {# Most Viewed Books #}
                    <div class="panel panel-default panel-most-liked-books box no-rounded">
                        <div class="panel-heading no-rounded">
                            <h3 class="panel-title">
                                <span class="fa fa-plus"></span>
                                Most Viewed Books
                            </h3>
                        </div>
                        <div class="panel-body">

                        </div>
                    </div>
                </div>
            </div>
            <!-- row book_main-->
        </div>
        <!-- container-fluid margin-top-lg -->
    </div><!-- boook-index -->
{% endblock %}