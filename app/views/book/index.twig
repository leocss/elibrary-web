{% extends 'layout-main.twig' %}

{% block title %}
    Books | {{ parent() }}
{% endblock %}

{% block content %}
    <div id="book-index">

        <div id="header_search">
            <div class="col-md-4" style=" margin-right: 5px;" id="header_check">
                <div class="input-group">
                    <input type="text" placeholder="Looking for a book, what book? " class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
                <!-- /input-group -->
            </div>
            <div id="header_only"><h3>BOOKS CATEGORIES</h3></div>
        </div>


        <div class="clearfix"></div>

        <div class="container-fluid margin-top-lg">
            <div class="row book_main">
                <div class="col-md-9">
                    <div class="container-fluid margin-top-lg">
                        <div class="row">
                            <div class="body-subcontainer">
                                {% set catArray=[] %}
                                {% for category in categories %}
                                    <div id="cat_head">
                                        {{ category.title }} &raquo; <a href="{{ app.url_generator.generate('books.category', {id: category.id})}}"
                                                >see more</a>
                                    </div>

                                    <div class="demo">
                                        <div class="example" id="{{ 'categories_'~ category.id }}">
                                            <div>
                                                <ul>
                                                    {% for book in category.books %}
                                                        <li>
                                                            <a href="{{ app.url_generator.generate('books.view', {id: book.id}) }}">
                                                                <img src="{{ app.default_book_image }}"
                                                                     width="183" height="190">
                                                            </a>

                                                            <div class="text-center" id="book-icon">
                                                                <span class="icon-att">
                                                                    <a href="#">
                                                                        <span data-toggle="tooltip" data-placement="top"
                                                                              title="view">
                                                                            <span class="glyphicon glyphicon-eye-open"></span>
                                                                        </span>
                                                                    </a>
                                                                    <span class="badge">112</span>
                                                                </span>
                                                                <span class="icon-att">
                                                                    <a href="#">
                                                                        <span data-toggle="tooltip" data-placement="top"
                                                                              title="Click to download book.">
                                                                <span class="glyphicon glyphicon-download"></span></span></a>
                                                                </span>
                                                                <span class="icon-att"><a href="#"><span
                                                                                data-toggle="tooltip"
                                                                                data-placement="top"
                                                                                title="Click to add book to your favorite">
                                                                <span class="glyphicon glyphicon-star"></span></span></a>
                                                                </span>
                                                                <span class="icon-att"><a href="#"
                                                                                          style="padding-right:15px;">
                                                               <span class="toolt" data-placement="left"
                                                                     data-toggle="tooltip"
                                                                     title="Click to apply for hardcopy of this book.">
                                                                <span class="glyphicon glyphicon-book"></span></span></a>
                                                                </span>
                                                                <span class="icon-att"><a href="#"><span
                                                                                data-toggle="tooltip"
                                                                                data-placement="top"
                                                                                title="like">
                                                                <span class="glyphicon glyphicon-thumbs-up"></span></span></a>
                                                                <span class="badge"> 12</span></span>
                                                            </div>
                                                        </li>

                                                    {% endfor %}
                                                </ul>
                                            </div>
                                        </div>
                                        <!-- example -->

                                    </div><!-- demo -->
                                {% endfor %}
                            </div>
                            <!-- .body-subcontainer -->

                        </div>
                        <!-- row -->
                    </div>
                    <!-- container-fluid margin-top-lg -->
                </div>
                <!-- col-md-9 -->

                <div class="col-md-3" style="padding-top: 20px;">
                    {% include 'book/sidebar.twig' %}
                </div>

            </div>
            <!-- row book_main-->
        </div>
        <!-- container-fluid margin-top-lg -->
    </div><!-- boook-index -->
{% endblock %}