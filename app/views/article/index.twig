{% extends 'layout-sidebar.twig' %}

{% block content %}
    <div id="print-job-index">
        <div class="page-header">
            <h2>Articles</h2>
        </div>
        <div class="container-fluid margin-top-lg">
            <div class="row">
                <div class="col-md-9">
                    {% for article in articles %}
                        <div class="row article_for_loop">
                            <div class="col-md-3 col-md-offset-1  me">
                                <img src="{{ app.default_article_image }}" width="210"
                                     height="230"/>
                            </div>

                            <div class="col-md-8" id="article_content_col">
                                <small id="article_create_update_date">Created at :
                                    {{ article.created_at }}

                                    updated at :
                                    {{ article.updated_at }}
                                </small>
                                <h3>
                                    <a href="{{ app.url_generator.generate('articles.view', {id: article.id}) }}"
                                       id="article_header_link">
                                        {{ article.title }}
                                    </a>
                                    <small style="font-size:12px; color:#CCC;">
                                        Author:{{ article.author_id }}
                                    </small>

                                </h3>
                                <p>
                                    {{ article.content_html }}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="col-md-3">

                </div>
            </div>
        </div>
    </div>
{% endblock %}