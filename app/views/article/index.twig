{% extends 'layout-main.twig' %}

{% block content %}
  <div id="article-index">
    <div class="page-header">
      <h2>Articles </h2>
    </div>

    <div class="container-fluid margin-top-lg">

      <div class="row">

        <div class="col-md-8">
          {% for article in articles %}
            <div class="blog-list ">
              <div class="row">
                <div class="col-md-4">

                  <div class="post-thumb">
                    <a class="pull-left" href="{{ app.url_generator.generate('articles.view', {id: article.id}) }}">
                      <img class="attachment-460x399 wp-post-image" width="460" height="399"
                           src="{{ article.image_url | default(app.default_article_image) }}">
                      </img>
                    </a>
                  </div>

                </div>

                <div class="col-md-8">
                  <div class="blog-list-desc">
                    <h2>
                      <a href="{{ app.url_generator.generate('articles.view', {id: article.id}) }}">
                        {{ article.title }}
                      </a>
                    </h2>
                    <ul class="plan-metas">
                      <li>
                        <i class="fa fa-user"></i>
                        By: Admin
                      </li>
                      <li>
                        <i class="fa fa-calendar-o"></i>
                        {{ article.created_at }}
                      </li>
                    </ul>
                    <p>{{ article.content_html }}</p>
                    <a title="" href="{{ app.url_generator.generate('articles.view', {id: article.id}) }}">Read more<i
                          class="fa fa-angle-right"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="col-md-4" d="usman2">


        </div>
      </div>

    </div>
  </div>
{% endblock %}